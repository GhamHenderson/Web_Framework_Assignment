{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <h1>Menu index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>ItemName</th>
            <th>ItemPrice</th>
            <th>ItemDescription</th>
            {% if is_granted('ROLE_CHEF') %}
            <th>IsAvailable</th>
            <th>actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>

                <td>{{ menu.itemName }}</td>
                <td>{{ menu.ItemPrice }}</td>
                <td>{{ menu.ItemDescription }}</td>
                {% if is_granted('ROLE_CHEF','ROLE_ADMIN') %}
                <td>{{ menu.isAvailable ? 'Yes' : 'No' }}</td>
                    {% endif %}
                {% if is_granted('ROLE_CHEF','ROLE_ADMIN') %}
                <td>
                    <a href="{{ path('menu_show', {'id': menu.id}) }}">show</a>
                    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>
                </td>
                {% endif %}
                <td>
                {% if is_granted('ROLE_CUSTOMER') %}
                    <a href="{{ path('menu_show', {'id': menu.id}) }}">Add to Cart</a>
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_CHEF','ROLE_ADMIN') %}
    <a href="{{ path('menu_new') }}">Create new</a>
    {% endif %}
{% endblock %}
