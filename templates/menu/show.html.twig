{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>ItemName</th>
                <td>{{ menu.itemName }}</td>
            </tr>
            <tr>
                <th>ItemPrice</th>
                <td>{{ menu.ItemPrice }}</td>
            </tr>
            <tr>
                <th>ItemDescription</th>
                <td>{{ menu.ItemDescription }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ menu.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_index') }}">back to list</a>

    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
