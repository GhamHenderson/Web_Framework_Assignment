{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block body %}
    <h1>Checkout</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ checkout.id }}</td>
            </tr>
            <tr>
                <th>NameOnCard</th>
                <td>{{ checkout.NameOnCard }}</td>
            </tr>
            <tr>
                <th>CardNumber</th>
                <td>{{ checkout.cardNumber }}</td>
            </tr>
            <tr>
                <th>ExpiryDate</th>
                <td>{{ checkout.expiryDate ? checkout.expiryDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_checkout_index') }}">back to list</a>

    <a href="{{ path('app_checkout_edit', {'id': checkout.id}) }}">edit</a>

    {{ include('checkout/_delete_form.html.twig') }}
{% endblock %}
